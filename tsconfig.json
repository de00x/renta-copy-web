{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["vite-plugin-svgr/client", "jest"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*",
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
